<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateExercise">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/top_text"
        android:text="Create a new exercise"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_text"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TableRow>
                <TextView
                    android:text="Name: "
                    android:textSize="20sp"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:hint="Exercise name?"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/name"
                    android:textSize="20sp"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:text="Reps: "
                    android:textSize="20sp"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:hint="Number of reps?"
                    android:inputType="number"
                    android:id="@+id/reps"
                    android:textSize="20sp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="Sets: "
                    android:textSize="20sp"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:hint="Number of sets?"
                    android:layout_marginLeft="5dp"
                    android:inputType="number"
                    android:id="@+id/sets"
                    android:textSize="20sp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="Weight: "
                    android:textSize="20sp"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:hint="Weights?"
                    android:inputType="number"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/weight"
                    android:textSize="20sp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="Notes: "
                    android:textSize="20sp"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:hint="Any notes?"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/notes"
                    android:textSize="20sp"/>
            </TableRow>
        </TableLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_height="wrap_content"
            android:text="add to workout"
            android:id="@+id/add_workout"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:text="cancel"
            android:id="@+id/cancel_button"/>
    </LinearLayout>


</RelativeLayout>